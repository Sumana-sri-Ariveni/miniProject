<div class="container mainComplaintDisplay mt-5">
    <h1 class="text-center">Complaints</h1>
    <div class="row">
        <div class="col-md-6 offset-md-3 background">
            <div class="forheight">
                <form action="/complaint" method="post">
                    <textarea name="complaint" style="border: 2px solid red;" class="form-control" id="complaint" rows="4" placeholder="write your complaint here" required></textarea>
                    <div class="complaintButtion">
                        <button id="complaintButton" type="submit" class="btn btn-danger">Submit Complaint</button>
                    </div>
                </form>
            </div>
            <h4 class="">Your complaints history</h4>
            <div class="alert alert-success">
                <div class="message">
                    <%= message %>
                </div>
                <div>
                    <ul>
                        <% for (let i = 0; i < complaints.length; i++) { %>
                            <li class="complaints">
                                Complaint <%= i + 1 %>: <%= complaints[i] %>
                            </li>
                        <% } %>
                    </ul>
                </div>                
            </div>
        </div>
    </div>
</div>